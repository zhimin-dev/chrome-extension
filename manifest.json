{
  "name": "知敏工具",
  "description": "This is zhimin chrome extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": [
    "alarms", 
    "tabs", 
    "bookmarks", 
    "contextMenus",
    "declarativeContent",
    "notifications",
    "webRequest",
    "webRequestBlocking", 
		"storage"
  ],
  "background": {
    "page": "background.html"
  },
  "icons":
	{
		"16": "src/assets/icon.png",
		"48": "src/assets/icon.png",
		"128": "src/assets/icon.png"
	},
  "content_scripts": [
		{
      "matches": ["<all_urls>"],
			"js": ["js/axios.min.js", "js/content_script.js"],
			"run_at": "document_start"
		}
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_icon" : "src/assets/icon.png",
    "default_title": "知敏工具",
    "default_popup": "index.html"
  },
  "homepage_url": "https://github.com/zhimin-dev",
  "commands": {
    "open-google": {
      "description": "Open a tab to zhi min tool",
      "suggested_key": { "default": "Ctrl+Shift+L" }
    },
    "_execute_browser_action": {
      "suggested_key": { "default": "Ctrl+Shift+K" }
    }
  }
}
